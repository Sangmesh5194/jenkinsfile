pipeline {
agent any
       stages {
             stage ('build') {
             step {
              sh '''
              #!/bin/bash
              echo "this is a first build stage of jenkinfile"
              '''
              }
            }
            stage ('test') {
            step {
            sh 'echo "second tset stage in jenkinfile"'
            }
          }
           stage ( 'deploy') {
           step {
           sh 'echo "third deploy stage in jenkinfile"'
           }
           }
   }
 }
