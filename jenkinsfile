pipeline {
 agent any
  stages {
   stage ('build') {
    steps {
     sh '''
      #!/bin/bash
       echo "this is first build stage in jenkinsfile"
       '''
         }
       }
         stage ('test') {
          steps {
          sh 'echo "second test stage in jenkinsfile"'
           }
          }
             stage ('deploy') {
             steps {
             sh 'echo "third deploy stage in jenkins"
             }
             }
   }
 }  
